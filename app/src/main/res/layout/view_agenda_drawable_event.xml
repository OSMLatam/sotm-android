<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8.0dip">

    <LinearLayout android:id="@id/view_agenda_event_description_container"
        android:orientation="vertical"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip">

        <TextView android:id="@id/day"
            android:textSize="14.0dip"
            android:textStyle="bold|italic"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@id/view_agenda_event_title"
            android:textSize="16.0dip"
            android:textColor="@android:color/black"
            android:paddingLeft="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@id/view_agenda_event_description"
            android:textSize="14.0dip"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray"
            android:paddingLeft="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@id/view_agenda_event_location"
                android:textSize="11.0dip"
                android:textColor="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:drawableLeft="@drawable/img_location"
                android:drawablePadding="5.0dip" />

            <ImageView android:id="@id/eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
